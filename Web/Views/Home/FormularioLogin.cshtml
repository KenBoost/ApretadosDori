@model Infraestructure.Model.Usuario

@{
    ViewBag.Title = "LOG";
}


<head>
    <link rel="stylesheet" type="text/css" href="~/Content/CSSLogin/EstiloLogin.css">
</head>
<div class="card">

  
        @using (Html.BeginForm("Login", "Home"))
        {
            <main>
                <br />
                <center>
                    <div class="formulario">
                        <br />
                        <h2>Bienvenido</h2>
                        <h4>Por favor digíte sus datos</h4>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <br />
                        <br />
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Identificacion" } })

                            </div>
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="form-group2">
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.clave, new { @class = "form-control", @placeholder = "Contraseña", @id = "password-field" })
                            </div>
                            @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Continuar" class="btn btn-default" title="Iniciar sesión" />
                            </div>
                        </div>
                        <br />
                    </div>
                </center>
                <br />
                <br />
            </main>
        }
  
</div>